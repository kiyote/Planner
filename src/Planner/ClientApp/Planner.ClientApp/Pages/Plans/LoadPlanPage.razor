@page "/plans"
@using Planner.ClientApp.Storage

<PageTitle>Plans</PageTitle>

<h3>Plans</h3>

<MudButton Variant="Variant.Filled" OnClick="@((e) => NavigationManager.NavigateTo("/plans/create"))">Create</MudButton>

@foreach( PlanSummary plan in _plans)
{
    <MudPaper Class="pa-4 ma-4">
        <MudText Typo="Typo.h6">@plan.Name</MudText>
        <MudButton Variant="Variant.Filled" OnClick="@((e) => NavigationManager.NavigateTo($"/plans/{plan.Id:N}"))">View</MudButton>
    </MudPaper>
}
